@model OpticianMgr.WebIdentity.Models.GlassesModel
@{
    ViewData["Title"] = "Wunschzettel";
}

<body style="background-color:#F9F9F9">
    <h1 style="font-size:55px;" align="center">Wunschzettel</h1>

    @foreach (var item in @Model.GlassModel.Where(w => w.Wish == true))
    {
    <div class="col-md-3 col-sm-3" id="greyBox">
        <img style="width: 275px" src="@String.Format("data:image/jpg;base64,{0}", item.Image)" alt="Brille">
        <label style="font-size:30px; margin-left:35%;">@item.Name</label>
        <p align="center">Modische Brille von: @item.Marke</p>
        <p align="center">Kategorie: @item.Category</p>
        <p style="margin-top:5px;" class="col-md-6 col-sm-6"><label>Preis:</label> @item.Price Euro</p>
        <form asp-route-id="@item.Id" asp-action="DeleteWish">
            <input style="margin-bottom:5px;" type="submit" value="Delete" class="col-md-6 col-sm-6 btn btn-default" onclick="return confirm('Wollen Sie die Brille vom Wunschzettel löschen?');" />
        </form>
        <form asp-route-id="@item.Id" asp-action="KaufinteresseMit">
            <input style="margin-bottom:5px;" type="submit" value="Kaufinteresse" class="col-md-6 col-sm-6 btn btn-default" onclick="return confirm('Wollen Sie dem Verkäufer Ihr Kaufintereese mitteilen?');" />
        </form>
    </div>
    }

    
</body>